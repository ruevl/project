# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true

# Database Configuration
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/library_db

# API Configuration
API_V1_PREFIX=/api/v1
LOG_LEVEL=INFO

# API Documentation
DOCS_URL=/docs
REDOC_URL=/redoc

# CORS Settings
# In development: use ["*"] or specific origins
# In production: NEVER use ["*"], specify exact origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# OpenLibrary API
OPENLIBRARY_BASE_URL=https://openlibrary.org
OPENLIBRARY_TIMEOUT=10.0

# JWT Authentication - CRITICAL SECURITY SETTINGS
# Generate a secure secret key with:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# NEVER commit the actual secret to git!
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Cache
# For development: local Redis
# For production: use Redis cluster or managed service
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Example Production Values (commented out)
# ENVIRONMENT=production
# DEBUG=false
# DATABASE_URL=postgresql+asyncpg://prod_user:STRONG_PASSWORD@db.example.com:5432/library_prod
# CORS_ORIGINS=["https://myapp.com","https://www.myapp.com"]
# JWT_SECRET_KEY=use_secrets_token_urlsafe_32_to_generate
# REDIS_URL=redis://cache.example.com:6379/0
# LOG_LEVEL=WARNING